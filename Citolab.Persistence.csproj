<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <Authors>Citolab</Authors>
        <Company>Cito</Company>
        <Copyright>Cito</Copyright>
        <Description>Library to persist data in Mongo or in-memory database</Description>
        <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    </PropertyGroup>

    <ItemGroup>
      <None Remove="LICENSE" />
    </ItemGroup>

    <ItemGroup>
      <Compile Include="LICENSE" />
